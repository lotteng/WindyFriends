<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.tistory.ey2s.windyfriends.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="483dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/camera_sample" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="499dp">

            <ImageButton
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/camera"
                app:srcCompat="@drawable/camera" />

            <ImageButton
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/camera"
                android:layout_toRightOf="@+id/camera"
                android:background="@drawable/share"
                app:srcCompat="@drawable/share" />

            <ImageButton
                android:id="@+id/makeBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/share"
                android:layout_toRightOf="@+id/share"
                android:background="@drawable/make_click"
                app:srcCompat="@drawable/make_bt" />

            <ImageButton
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/optionBT"
                android:layout_toEndOf="@+id/makeBT"
                android:layout_toRightOf="@+id/makeBT"
                android:background="@drawable/help"
                app:srcCompat="@drawable/help" />

            <ImageButton
                android:id="@+id/optionBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/help"
                android:layout_toRightOf="@+id/help"
                android:background="@drawable/option_click"
                app:srcCompat="@drawable/option_bt" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
